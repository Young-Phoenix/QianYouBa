<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="1.0dip" />
            <gradient android:startColor="@color/dlg_light_glay" android:endColor="@color/dlg_light_glay" android:angle="270.0" android:centerY="0.75" android:centerColor="@color/dlg_light_glay" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="1.0dip" />
                <gradient android:startColor="@color/dlg_sky_blue" android:endColor="@color/dlg_sky_blue" android:angle="90.0" android:centerY="0.75" android:centerColor="@color/dlg_sky_blue" />
            </shape>
        </clip>
    </item>
</layer-list>