<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:paddingLeft="@dimen/rl_size_10px"
                android:paddingRight="@dimen/rl_size_10px"
                android:paddingTop="@dimen/rl_size_10px"
                android:paddingBottom="@dimen/rl_size_10px"
                android:layout_height="wrap_content"
                android:background="@drawable/tt_top_default_bk">
    <ImageView
            android:id="@id/iv_picture"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/test_image2"/>
    <TextView
            android:id="@id/tv_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海南三亚旅游景点加井岛户外一日游团-海角之约潜水团游"
            android:textColor="@color/global_user_name"
            android:textSize="14sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/rl_size_10px"
            android:layout_toRightOf="@id/iv_picture"/>
    <TextView
            android:id="@id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="自驾游"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/rl_size_10px"
            android:layout_toRightOf="@id/iv_picture"/>
    <TextView
            android:id="@id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_hint_color"
            android:text="已加入5人/10人"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/rl_size_10px"
            android:layout_alignBottom="@id/iv_picture"
            android:layout_toRightOf="@id/iv_picture"/>
    <TextView
            android:id="@id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mc_title"
            android:text="￥500/人"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_alignBottom="@id/iv_picture"
            android:layout_alignParentRight="true"/>
</RelativeLayout>
