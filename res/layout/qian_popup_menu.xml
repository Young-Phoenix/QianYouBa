<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/ll_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2.0dip" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tip_bg"
        android:orientation="vertical"
        android:padding="2.0dip" >

        <RelativeLayout
            android:id="@id/ll_tongge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@id/iv_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/share_ic_glay" />

            <TextView
                android:id="@id/tv_tongge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="0.0dip"
                android:layout_toRightOf="@id/iv_man"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/distance_10px"
                android:paddingLeft="@dimen/distance_30px"
                android:paddingRight="@dimen/distance_30px"
                android:paddingTop="@dimen/distance_10px"
                android:singleLine="true"
                android:text="通哥"
                android:textColor="#ffa0a5af"
                android:textSize="@dimen/text_size_small_28pt" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/glay_line_color" />

        <RelativeLayout
            android:id="@id/ll_tongjie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@id/iv_women"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_upload" />

            <TextView
                android:id="@id/tv_tongjie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="0.0dip"
                android:layout_toRightOf="@id/iv_women"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/distance_10px"
                android:paddingLeft="@dimen/distance_30px"
                android:paddingRight="@dimen/distance_30px"
                android:paddingTop="@dimen/distance_10px"
                android:singleLine="true"
                android:text="通姐"
                android:textColor="#ffa0a5af"
                android:textSize="@dimen/text_size_small_28pt" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/glay_line_color" />

        <RelativeLayout
            android:id="@id/ll_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@id/iv_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/delete_ic_glay" />

            <TextView
                android:id="@id/tv_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="0.0dip"
                android:layout_toRightOf="@id/iv_all"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/distance_10px"
                android:paddingLeft="@dimen/distance_30px"
                android:paddingRight="@dimen/distance_30px"
                android:paddingTop="@dimen/distance_10px"
                android:singleLine="true"
                android:text="所有"
                android:textColor="#ffa0a5af"
                android:textSize="@dimen/text_size_small_28pt" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>